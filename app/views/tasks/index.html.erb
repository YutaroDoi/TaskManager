<% provide(:title, 'All tasks') %>
<h1>タスク一覧</h1>
<div class="container">
  <%= link_to "作成", new_task_path %>
    <table class="table">
        <thead>
            <tr class="table-info">
                <th scope="col">ID</th>
                <th scope="col">タスク名</th>
                <th scope="col">ステータス</th>
                <th scope="col">ラベル</th>
                <th scope="col">優先順位</th>
                <th scope="col">終了期限</th>
                <th scope="col">作成日時</th>
                <th scope="col">更新日時</th>
                <th scope="col" colspan = "3">アクション</th>
            </tr>
        </thead>
        <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <th scope="row"><%= task.id %></th>
                <td><%= task.name %></td>
                <td><%= task.status %></td>
                <td><%= task.label %></td>
                <td><%= task.priority %></td>
                <td><%= task.expire %></td>
                <td><%= task.created_at %></td>
                <td><%= task.updated_at %></td>
                <td><%= link_to "詳細", task %></td>
                <td><%= link_to "編集", edit_task_path(task) %></td>
                <td><%= link_to "削除", "#" %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>

